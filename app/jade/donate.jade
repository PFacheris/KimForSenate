extends /layouts/_default

block content
  .gallery.donation-container(style="background:url('/images/road_bg.jpg');background-repeat:no-repeat;background-position-y:-100px;background-size:150%")
    .donate
      .donate-header
        h1 Become a Contributor
        p Harry is running for U.S. Senator to achieve the best possible future for Texas and the American people. By chipping in you're helping cover Harry's campaign costs and bringing him closer to fixing Washington.
      .row.divider
      .step-header
        .center
          h2.header-text Donate Now
          ul.step-nav
            li
              p Amount
              a.step-link.active(data-step-nav='1') 1
            li
              p Donator
              a.step-link.disabled(data-step-nav='2') 2
            li
              p Payment
              a.step-link.disabled(data-step-nav='3') 3
      .form-container
        .loading
          .loader_back
            .loader.blue
        .step-container
          p.payment-errors
          .step.active(data-step='1')
            form#amount-form
              .form-row
                ul.amounts
                  li
                    a.btn(data-amount-set='5') $5
                  li
                    a.btn(data-amount-set='10') $10
                  li
                    a.btn(data-amount-set='20') $20
                  li
                    a.btn(data-amount-set='100') $100
                  li
                    a.btn(data-amount-set='1000') $1000
                  li.other
                    .input-container
                      input#amount(type='text', name='amount', placeholder='Amount (USD)', parsley-required="true", parsley-currency="true")
              input.btn(type='submit', value='NEXT')
          .step(data-step='2')
            form#info-form
              .form-row
                .input-container.name
                  input#name(type='text', name='name', data-stripe='name', placeholder='Name*', parsley-required="true")
              .form-row
                .input-container.street
                  input#street(type='text', name='street', data-stripe='address_line1', placeholder='Street*', parsley-required="true")
              .form-row
                .input-container.city
                  input#city(type='text', name='city', data-stripe='address_city', placeholder='City*', parsley-required="true")
                .input-container.state
                  input#state(type='text', name='state', size='2', data-stripe='address_state', placeholder='State*', parsley-required="true", parsley-state="true")
                .input-container.zip
                  input#zip(type='text', name='zip', data-stripe='address_zip', placeholder='ZIP Code*', parsley-required="true", parsley-zipcode="true")
              .form-row
                .input-container.employer
                  input#employer(type='text', name="employer", placeholder='Employer*', parsley-required="true")
                .input-container.occupation
                  input#occupation(type='text', name="occupation", placeholder='Occupation*', parsley-required="true")
              input.btn(type='submit', value='NEXT')
          .step(data-step='3')
            form#payment-form(action='charge.php', method='POST')
              .form-row
                .input-container.number
                  input#number(type='text', size='20', data-stripe='number', placeholder='Card Number*', parsley-required="true", parsley-credit="true")
                .input-container.cvc
                  input#cvc(type='text', size='4', data-stripe='cvc', placeholder='CVC*', parsley-required="true", parsley-cvc="true")
              .form-row
                .input-container.exp-month
                  input#exp-month(type='text', size='2', data-stripe='exp-month', placeholder='MM*', parsley-required="true", parsley-type="digits", parsley-range="[1, 12]", parsley-month="true")
                span  / 
                .input-container.exp-year
                  input#exp-year(type='text', size='4', data-stripe='exp-year', placeholder='YYYY*', parsley-required="true", parsley-type="digits")
              input.btn(type='submit', value='DONATE')


