.donation-container
  padding: 30px
  .donate
    background: white
    width: 40%
    margin-left: 15%
    margin-right: 35
    border-radius(3px)

    .donate-header
      padding: 30px 20px
      h1
        color: accent-color
        margin-bottom: 5px

      p
        font-family: 'Alegreya Sans', sans-serif
        font-size: 90%

    .step-header
      border-bottom: 1px solid rgba(0,0,0,.25)
      padding: 10px 20px
      padding-bottom: 15px
      background: #f1f1f1

      .center
        margin: auto
        text-align: center
        width: 50%

        .header-text
          font-weight: 500
          margin-bottom: 5px

      ul.step-nav
        list-style: none
        padding: 0
        margin: 0

        li
          position: relative
          width: 45px
          display: inline-block
          text-align: center

          p
            margin: 0
            font-size: 12px
            font-family: 'Alegreya Sans', sans-serif
            font-weight: bold

          &:not(:last-child)
            &:after
              content: '';
              background: #c95151;
              width: 29px;
              height: 1px;
              position: absolute;
              top: 30px;
              right: -16px;
              z-index: 0;

          .step-link
            position: relative
            z-index: 1
            width: 30px;
            height: 30px;
            display: block;
            background: #C95151;
            border-radius: 50%;
            box-shadow: 0px 3px 0px darken(#C95151,25%);
            position: relative
            top: 0
            margin-left: 7.5px
            line-height: 30px;
            font-size: 18px;
            font-weight: bold;
            color: white;
            text-shadow: 0px -1px 0px darken(#C95151,25%);

            &:hover, &.hover
              background: darken(#C95151, 10%)

            &:active, &.active
              background: darken(#C95151, 10%)
              box-shadow: 0px 1px 0px darken(#C95151,25%);
              top: 2px

            &.disabled
              background: #BDBDBD
              color: lighten(#BDBDBD, 40%)
              box-shadow: 0px 3px 0px darken(#BDBDBD,25%);
              text-shadow: 0px -1px 0px darken(#BDBDBD,25%);
              top: 0

    .form-container
      position: relative;
      .loading
        display: none;
        position: absolute;
        width: 100%;
        height: 100%;
        left: 0;
        top: 0;
        background: rgba(0,0,0,0.5);
        border-bottom-left-radius: 3px;
        border-bottom-right-radius: 3px;
        z-index: 5;

        .loader_back 
          width: 90px;
          height: 90px;
          padding: 10px;
          color: #fff;
          font-weight: bold;
          text-align: center;
          background: rgba(32, 32, 32, 0.9);
          
          -webkit-border-radius: 50%;
          -moz-border-radius: 50%;
          border-radius: 50%;
          
          margin: auto;
          position: relative;
          top: 35%

        .loader 
          width: 70px;
          height: 70px;
          border-right: 8px solid #4D4D4D;
          border-bottom: 8px solid #4D4D4D;
          
          margin: auto;
          
          -webkit-border-radius: 50%;
          -moz-border-radius: 50%;
          border-radius: 50%;
          
          -webkit-animation: rotate 2s infinite linear;
          -moz-animation: rotate 2s infinite linear;
          -ms-animation: rotate 2s infinite linear;
          animation: rotate 2s infinite linear;

          &.blue
            border-left: 8px solid accent-color;
            border-top: 8px solid accent-color;

      .payment-errors
        color: #C95151
        font-size: 14px
        text-align: center
        font-family: 'Alegreya Sans', sans-serif
        margin-top: 0
        margin-bottom: 5px

      .step-container
        padding: 30px 20px

        &.blur
          filter: blur(2px);
          -webkit-filter: blur(2px);
          -moz-filter: blur(3px);
          -o-filter: blur(3px);
          -ms-filter: blur(3px);
          filter: url('../images/blur.svg#blur');

        .step
          position: relative
          max-height: 0px
          opacity: 0
          transition-property(max-height, opacity)
          transition-duration(.3s)

          &.active
            transition-delay(.3s)
            max-height: 500px
            opacity: 1

      .form-row
        font-size: 0
        span
          display: inline-block
          text-align: center
          font-size: 24px;
          color: #A7A7A7;
          width: 5%

        ul.amounts
          list-style: none
          width: 100%
          padding: 0

          li
            display: inline-block
            width: 31%
            margin-right: 2%
            margin-bottom: 2%
            &:nth-child(3n+0)
              margin-right: 0
            &:last-child
              margin: 0
            
            .btn
              background: accent-color
              width: 100%
              margin: 0

              &:hover
                background: darken(accent-color, 10%)

            &.other
              vertical-align:top

      .btn
        height: auto
        cursor: pointer
        margin: 0
        width: 70%
        margin-left: 15%
        margin-top: 10px
        border: none
        display: block
      
      input
        border: 1px solid #c0c0c0

        &:not(.btn)
          width:100%
          display: block
          font-size: 18px
          margin: 7px 0px

.input-container
  position: relative
  display: inline-block
  &.number
    width: 77%
    margin-right: 1.5%
  &.cvc
    width: 21.5%
  &.exp-month
    width: 22%
    margin-left: 25%
  &.exp-year
    width: 25%
  &.name, &.street
    width: 100%
  &.city
    width: 49.25%
    margin-right: 1.5%
  &.state
    width: 17.5%
    margin-right: 1.5%
  &.zip
    width: 30.25%
  &.amount
    width:100%
  &.employer
    width:49.25%
    margin-right:1.5%;
  &.occupation
    width:49.25%
  #amount
    margin: 0
    height: 64px
      
  .error
    position: absolute;
    width: 80%;
    height: auto
    bottom: 0px
    z-index: 2
    background: #c95151
    padding: 5px
    border: 2px solid white
    border-radius(3px)
    box-shadow: 1px 1px 8px rgba(0,0,0,.25);

    &:before
      content: ''
      position: absolute;
      bottom: -12px
      left: -webkit-calc(50% - 12.5px);
      left: -moz-calc(50% - 12.5px);
      left: calc(50% - 12.5px);
      width: 0px;
      height: 0px;
      border-style: solid;
      border-width: 12.5px 12.5px 0 12.5px;
      border-color: #c95151 transparent transparent transparent;
      z-index: 4

    &:after
      content: ''
      position: absolute;
      bottom: -15px;
      left: -webkit-calc(50% - 15.5px);
      left: -moz-calc(50% - 15.5px);
      left: calc(50% - 15.5px);
      width: 0px;
      height: 0px;
      border-style: solid;
      border-width: 15.5px 15.5px 0 15.5px;
      border-color: white transparent transparent transparent;
      z-index: 3

    ul
      padding: 0
      margin: 0
      list-style: none
      li
        width: 100% !important
        font-size: 11px
        text-align: center
        font-family: 'Alegreya Sans', sans-serif
        color: white

@-webkit-keyframes rotate
  from {-webkit-transform: rotate(0deg);}
  to {-webkit-transform: rotate(360deg);}

@-moz-keyframes rotate
  from {-webkit-transform: rotate(0deg);}
  to {-webkit-transform: rotate(360deg);}

@-ms-keyframes rotate
  from {-webkit-transform: rotate(0deg);}
  to {-webkit-transform: rotate(360deg);}

@keyframes rotate
  from {-webkit-transform: rotate(0deg);}
  to {-webkit-transform: rotate(360deg);}
