.volunteer-container
  padding: 30px
  .volunteer
    background: white
    width: 50%
    margin-left: 15%
    margin-right: 35
    padding: 30px 20px
    border-radius(3px)

    h1
      color: accent-color
      margin-bottom: 5px

    p
      font-family: 'Alegreya Sans', sans-serif
      font-size: 90%

    label
      position: absolute;

    input
      border: 1px solid #c0c0c0

      &.btn
        height: auto
        cursor: pointer
        margin: 0
        width: 50%
        margin-left: 25%
        margin-top: 10px
        border: none

      &:not(.btn)
        width:48%
        display: inline-block
        font-size: 18px
        margin: 7px 0px

        &:nth-child(even)
          margin-left: 5px
